<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/bottom_navigation"
            app:startDestination="@id/permissionFragment">

    <fragment android:id="@+id/permissionFragment"
              android:name="com.example.template.ui.main_screen.permission_fragment.PermissionFragment"
              tools:layout="@layout/fragment_permission">
        <action
                android:id="@+id/action_permissionFragment_to_pictureFragment"
                app:destination="@id/pictureFragment"
                app:popEnterAnim="@anim/no_anim"
                />
    </fragment>

    <fragment android:id="@+id/pictureFragment"
              android:name="com.example.template.ui.main_screen.picture_fragment.PictureFragment"
              tools:layout="@layout/fragment_picture"/>
</navigation>